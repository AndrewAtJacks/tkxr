{
  "name": "tkxr",
  "version": "0.1.0",
  "description": "In-repo ticket management system with CLI and web interface",
  "keywords": [
    "tickets",
    "issue-tracker",
    "jira",
    "cli",
    "file-based"
  ],
  "author": "Andrew Hein",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "tkxr": "./dist/cli/index.js",
    "tkxr-mcp": "./dist/mcp/server.js"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && npm run build:web",
    "build:web": "cd src/web && npm run build",
    "dev": "tsc --watch",
    "dev:web": "cd src/web && npm run dev",
    "serve": "node dist/cli/index.js serve",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "chalk": "^5.3.0",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "minimist": "^1.2.8",
    "nanoid": "^5.1.6",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.7",
    "@types/minimist": "^1.2.5",
    "@types/ws": "^8.5.7",
    "rimraf": "^6.1.3",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
